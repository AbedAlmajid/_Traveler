@model IEnumerable<DemoTraveler.Models.Ticket>

@{
    ViewData["Title"] = "Tickets";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<h3>Tickets</h3>

@if (Model.Any())
{

    <div class="row">
        <div class="col-md-6 align-content-start">
            <a asp-action="Create" class="btn btn-success">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z" />
                </svg>
                Add Ticket
            </a>
        </div>
        <br />
        <div class="col-md-6 align-content-end">
            <form asp-action="Index" method="get" class="form-inline align-self-end" style="text-align: right">
                <div class="form-group mx-sm-3 mb-2">
                    <input type="text" name="toCountry" class="form-control"
                           placeholder="Search By To Country :"
                           value="@ViewData["CurrentFilter"]" />
                </div>
                <button type="submit" class="btn btn-primary" value="Search">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                    </svg> Search
                </button>
            </form>
        </div>
    </div>

    <hr />

    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FlyBrand)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BrandName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FromCountry)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ToCountry)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FromAirport)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ToAirport)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DepartTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ArriveTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DepartDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img width="120" src="..\@Url.Content(item.FlyBrand)" alt="package-place">
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BrandName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FromCountry)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ToCountry)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FromAirport)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ToAirport)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DepartTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ArriveTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DepartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Travel.TravelName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.TicketId" class="btn btn-warning">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                            </svg> Edit
                        </a> |
                        <a asp-action="Details" asp-route-id="@item.TicketId" class="btn btn-info">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
                            </svg> Details
                        </a> |
                        <a asp-action="Delete" asp-route-id="@item.TicketId" class="btn btn-danger">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
                            </svg> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="row">
        <div class="col-md-6 ">
            <a asp-action="Create" class="btn btn-success">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z" />
                </svg>
                Add Ticket
            </a>
        </div>
        <br />
        <div class="col-md-6 align-content-end">
            <form asp-action="Index" method="get" class="form-inline align-self-end" style="text-align: right">
                <div class="form-group mx-sm-3 mb-2">
                    <input type="text" name="toCountry" class="form-control"
                           placeholder="Search By To Country :"
                           value="@ViewData["CurrentFilter"]" />
                </div>
                <button type="submit" class="btn btn-primary mb-2" value="Search">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                    </svg>Search</button>
            </form>
        </div>
    </div>

    <hr />
    <div Class="alert alert info">
        <b>No Ticket Avalible for @ViewData["CurrentFilter"]</b>
    </div>
}