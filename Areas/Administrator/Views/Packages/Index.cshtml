@model IEnumerable<DemoTraveler.Models.Package>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CountryImg)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CountryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Duration)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Person)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CountryDesc)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BrandName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Prize)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HotelStars)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DepartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Country)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img width="120px" src="..\@Url.Content(item.CountryImg)" alt="package-place">
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CountryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Person)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CountryDesc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BrandName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prize)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HotelStars)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DepartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country.CountryName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.PackageId" class="btn btn-warning">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.PackageId" class="btn btn-info">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.PackageId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div Class="alert alert info">
        <b> No packages Avalible Click To Create New One</b>
    </div>
    <a asp-action="Create" class="btn btn-success">
        Add Package
    </a>
}

