@model DemoTraveler.Models.Travel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>Travel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TravelId" />
            <div class="form-group">
                <label asp-for="TravelName" class="control-label"></label>
                <input asp-for="TravelName" class="form-control" />
                <span asp-validation-for="TravelName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TravelImg" class="control-label"></label>
                <input asp-for="TravelImg" type="file" class="form-control" />
                <span asp-validation-for="TravelImg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-success">Back to List</a>
</div>

