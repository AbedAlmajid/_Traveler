@model IEnumerable<DemoTraveler.Models.Package>
@using System.Globalization

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AirCompany/Views/Shared/_AirCompanyLayout.cshtml";
}

<h3 class="font-weight-bold"> @Localizer["Package"]</h3>


@if (Model.Any())
{
    <div class="row">
        <div class="col-md-6">
            <a asp-action="Create" class="btn btn-success">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z" />
                </svg>
                @Localizer["Add Package"]
            </a>
        </div>
        <div class="col-md-5 align-right">
            <form asp-action="Index" method="get" class="form-inline align-self-end" style="text-align: right">
                <div class="form-group mx-sm-3 mb-4">
                    <input type="text" name="CountryName" class="form-control"
                           placeholder=":
                           @Localizer["Search By Country Name"]"
                           value="@ViewData["CurrentFilter"]" />
                </div>
                <button type="submit" class="btn btn-primary mb-2" value="Search">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                    </svg> @Localizer["Search"]
                </button>
            </form>
        </div>
    </div>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Localizer["Country Image"]
                </th>
                <th>
                    @Localizer["Country Name"]
                </th>
                <th>
                    @Localizer["Duration"]
                </th>
                <th>
                    @Localizer["Person"]
                </th>
                <th>
                    @Localizer["Country Description"]
                </th>
                <th>
                    @Localizer["Brand Name"]
                </th>
                <th>
                    @Localizer["Price"]
                </th>
                <th>
                    @Localizer["Hotel Stars"]
                </th>
                <th>
                    @Localizer["Departure Date"]
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img width="120" src="..\@Url.Content(item.CountryImg)" alt="package-place">
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CountryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Person)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CountryDesc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BrandName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HotelStars)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DepartDate)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.PackageId" class="btn btn-warning">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                            </svg> @Localizer["Edit"]
                        </a> |
                        <a asp-action="Details" asp-route-id="@item.PackageId" class="btn btn-info">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
                            </svg> @Localizer["Details"]
                        </a> |
                        <a asp-action="Delete" asp-route-id="@item.PackageId" class="btn btn-danger">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
                            </svg> @Localizer["Delete"]
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="row">
        <div class="col-md-6 ">
            <a asp-action="Create" class="btn btn-success">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z" />
                </svg>
                Add Package
            </a>
        </div>
        <div class="col-md-6 align-content-end mt-4">
            <form asp-action="Index" method="get" class="form-inline align-self-end" style="text-align: right">
                <div class="form-group mx-sm-3 mb-2">
                    <input type="text" name="CountryName" class="form-control"
                           placeholder="Search By Country Name :"
                           value="@ViewData["CurrentFilter"]" />
                </div>
                <button type="submit" class="btn btn-primary mb-2" value="Search">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                    </svg>Search
                </button>
            </form>
        </div>
    </div>

    <hr />
    <div Class="alert alert info">
        <b> No Packages Avalible For This Country</b>
    </div>
}
