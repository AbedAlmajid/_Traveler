@model DemoTraveler.Models.Package

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/AirCompany/Views/Shared/_AirCompanyLayout.cshtml";
}

<div class="row" style="direction:@Localizer["dir"]">

    <h1>@Localizer["Delete"]</h1>

    <h3>@Localizer["Are you sure you want to delete this"]?</h3>

        <div class="row" style="direction:@Localizer["dir"]">
            <h4>@Localizer["Package"]</h4>
            <table class="table table-hover">
                <tr>
                    <td>@Localizer["Country Image"]</td>
                    <td>@Html.DisplayFor(model => model.CountryImg)</td>
                </tr>
                <tr>
                    <td>@Localizer["Country Name"]</td>
                    <td>@Html.DisplayFor(model => model.CountryName)</td>
                </tr>
                <tr>
                    <td>@Localizer["Duration"]</td>
                    <td>@Html.DisplayFor(model => model.Duration)</td>
                </tr>
                <tr>
                    <td>@Localizer["Person"]</td>
                    <td>@Html.DisplayFor(model => model.Person)</td>
                </tr>
                <tr>
                    <td>@Localizer["Country Description"]</td>
                    <td>@Html.DisplayFor(model => model.CountryDesc)</td>
                </tr>
                <tr>
                    <td>@Localizer["Brand Name"]</td>
                    <td>@Html.DisplayFor(model => model.BrandName)</td>
                </tr>
                <tr>
                    <td>@Localizer["Price"]</td>
                    <td>@Html.DisplayFor(model => model.Price)</td>
                </tr>
                <tr>
                    <td>@Localizer["Hotel Stars"]</td>
                    <td>@Html.DisplayFor(model => model.HotelStars)</td>
                </tr>
                <tr>
                    <td>@Localizer["Departure Date"]</td>
                    <td>@Html.DisplayFor(model => model.DepartDate)</td>
                </tr>
                <tr>
                    <td>@Localizer["Return Date"]</td>
                    <td>@Html.DisplayFor(model => model.ReturnDate)</td>
                </tr>
                <tr>
                <tr>
                    <td>@Localizer["Creation Date"]</td>
                    <td>@Html.DisplayFor(model => model.CreationDate)</td>
                </tr>
                <tr>
                    <td>@Localizer["Modification Date"]</td>
                    <td>@Html.DisplayFor(model => model.ModificationDate)</td>
                </tr>
            </table>
            <form asp-action="Delete">
                <input type="hidden" asp-for="PackageId" />
                <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-warning">@Localizer["Back to List"]</a>
            </form>
        </div>
    </div>
