@model IEnumerable<DemoTraveler.Models.UserTicket>
@{
    ViewData["Title"] = "UserTicket";
    Layout = "~/Areas/Customer/Views/Shared/_CustomerLayout.cshtml";
}

<div class="container-fluid py-5" style="min-height:900px"dir="@Localizer["rtd"]">
    <div class="container pt-5">
        @if (Model.Any())
        {
            <h1>@Localizer["My Ticket"]</h1>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                        </th>
                        <th>
                            @Localizer["My Ticket"]
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Booking)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Localizer["Name"]: @Html.DisplayFor(modelItem => item.ApplicationUser.FirstName)
                                @Html.DisplayFor(modelItem => item.ApplicationUser.LastName)
                            </td>
                            <td>
                                @Localizer["Brand Name"]: @Html.DisplayFor(modelItem => item.Ticket.BrandName)
                                <br />
                                @Localizer["From"]: @Html.DisplayFor(modelItem => item.Ticket.FromCountry)
                                <br />
                                @Localizer["To"]: @Html.DisplayFor(modelItem => item.Ticket.ToCountry)
                                <br />
                                @Localizer["From Airport"]:@Html.DisplayFor(modelItem => item.Ticket.FromAirport)
                                <br />
                                @Localizer["To Airport"] : @Html.DisplayFor(modelItem => item.Ticket.ToAirport)
                                <br />
                                @Localizer["Depart Time"] :@Html.DisplayFor(modelItem => item.Ticket.DepartTime)
                                <br />
                                @Localizer["Arrive Time"]: @Html.DisplayFor(modelItem => item.Ticket.ArriveTime)
                                <br />
                                @Localizer["Depart Date"]: @Html.DisplayFor(modelItem => item.Ticket.DepartDate)
                                <br />
                                @Localizer["Flight Duration"]: @Html.DisplayFor(modelItem => item.Ticket.FlightDuration)
                                <br />
                                @Localizer["Weight"] : @Html.DisplayFor(modelItem => item.Ticket.Weight) KG
                                <br />
                                @Localizer["Price"] : @Html.DisplayFor(modelItem => item.Ticket.Price)
                                <br />
                                @Localizer["Flight Type"]: @Html.DisplayFor(modelItem => item.Ticket.FlightType.TypeFlight)
                                <br />
                                @Localizer["Ticket Type"]: @Html.DisplayFor(modelItem => item.Ticket.TicketType.TypeTicket)
                            </td>
                            <td>
                                @Localizer["Passenger Name"] : @Html.DisplayFor(modelItem => item.Booking.FirstName) @Html.DisplayFor(modelItem => item.Booking.LastName)
                                <br />
                                @Localizer["National Number"] : @Html.DisplayFor(modelItem => item.Booking.NationalNumber)
                                <br />
                                @Localizer["Passport Number"] : @Html.DisplayFor(modelItem => item.Booking.PassportNumber)
                                <br />
                                @Localizer["Address"] : @Html.DisplayFor(modelItem => item.Booking.Address)
                                <br />
                                @Localizer["ZipCode"] : @Html.DisplayFor(modelItem => item.Booking.ZipCode)
                                <br />
                                @Localizer["PhoneNumber"] : @Html.DisplayFor(modelItem => item.Booking.PhoneNumber)
                                <br />
                                @Localizer["Payment status"]
                                @if (item.Booking.Status == true)
                                {
                                    <h3 class="text-primary">@Localizer["Payment is Done"]</h3>
                                }
                                else
                                {
                                    <h3 class="text-danger">@Localizer["Payment is Not Done"]</h3>
                                    <a asp-action="Payment" asp-controller="Home" asp-route-Id="@item.BookingId" asp-area="" class="btn btn-success">@Localizer["Payment"]</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h1>@Localizer["My Ticket"]</h1>
            <br />
            <br />
            <p>@Localizer["No Ticket Available"]</p>
            <label class="form-group">@Localizer["Click Book Now for Booking Ticket"]</label>
            <br />
            <a asp-action="Destination" asp-controller="Home" asp-area="" class="btn btn-primary">@Localizer["Book Now"]</a>
        }

    </div>
</div>