                                        <a asp-action="Logout" asp-controller="Account" class="dropdown-item">@Localizer["Logout"]</a>
                                        <a asp-action="Index" asp-controller="Customer" asp-area="Customer" class="dropdown-item">@Localizer["Dashboard"]</a>
                                    </div>
                                </div>
                            }
                        }
