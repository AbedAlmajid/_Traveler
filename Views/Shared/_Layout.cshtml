                                    <a asp-action="Travel" asp-controller="Home" class="dropdown-item">@Localizer["Destination"]</a>
                                    <a asp-action="Client" asp-controller="Home" class="dropdown-item">@Localizer["Clients"]</a>
                                </div>
                            </div>
                        }
