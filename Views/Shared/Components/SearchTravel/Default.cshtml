@model IEnumerable<Travel>


<div class="container-fluid booking mt-5 pb-5">
    <div class="container pb-5">
        <div class="bg-light shadow" style="padding: 30px;">
            <form method="post" action="@Url.Action("SearchTravel", "Home")">
                <div class="row align-items-center" style="min-height: 60px;">
                    <div class="col-md-10">
                        <div class="row">
                            <div class="col-md-10">
                                <div class="mb-3 mb-md-0">
                                    <div class="date" id="date1" data-target-input="nearest">
                                        <input type="text" id="travelName" name="txtName" class="form-control p-4" placeholder=@Localizer["Travel Name"] />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <button class="btn btn-primary btn-block" type="submit" style="height: 47px; margin-top: -2px;">@Localizer["Search"]</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
