@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Localization
@using System.Globalization

@model IEnumerable<HomeImage>


@foreach (var item in Model)
{
    <div class="">
        <div id="header-carousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="w-100" src="..\@Url.Content(item.Imagea)" alt="Image">
                    <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                        <div class="p-3" style="max-width: 900px;">
                            <h4 class="text-white text-uppercase mb-md-3">@Localizer["Tours & Travel"]</h4>
                            <h1 class="display-3 text-white mb-md-4">@Localizer["Let's Discover The World Together"]</h1>
                            <a asp-action="TourPackage" asp-controller="Home" class="btn btn-primary py-md-3 px-md-5 mt-2">@Localizer["Book Now"]</a>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="w-100" src="..\@Url.Content(item.Imageb)" alt="Image">
                    <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                        <div class="container" style="max-width: 900px;">
                            <h4 class="text-white text-uppercase mb-md-3">@Localizer["Tours & Travel"]</h4>
                            <h1 class="display-3 text-white mb-md-4">@Localizer["Discover Amazing Places With Us"]</h1>
                            <a href="" class="btn btn-primary py-md-3 px-md-5 mt-2">@Localizer["Book Now"]</a>
                        </div>
                    </div>
                </div>
            </div>
            @if (CultureInfo.CurrentCulture.Name.StartsWith("ar"))
            {
                <a class="carousel-control-next" href="#header-carousel" data-slide="prev">
                    <div class="btn btn-dark" style="width: 45px; height: 45px;">
                        <span class="carousel-control-prev-icon mb-n2"></span>
                    </div>
                </a>
                <a class="carousel-control-prev" href="#header-carousel" data-slide="next">
                    <div class="btn btn-dark" style="width: 45px; height: 45px;">
                        <span class="carousel-control-next-icon mb-n2"></span>
                    </div>
                </a>

            }
            else
            {
                <a class="carousel-control-prev" href="#header-carousel" data-slide="prev">
                    <div class="btn btn-dark" style="width: 45px; height: 45px;">
                        <span class="carousel-control-prev-icon mb-n2"></span>
                    </div>
                </a>
                <a class="carousel-control-next" href="#header-carousel" data-slide="next">
                    <div class="btn btn-dark" style="width: 45px; height: 45px;">
                        <span class="carousel-control-next-icon mb-n2"></span>
                    </div>
                </a>
            }

        </div>
    </div>

}

